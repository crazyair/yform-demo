{
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "yform": ["src/*"]
        },
        "strictNullChecks": true,
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "target": "es6",
        "skipLibCheck": true,
        "lib": ["dom", "es2017"]
    },
    "include": ["src/**/*", "typings.d.ts", "src/index.tsx"],
    "exclude": ["node_modules", "dist", "src/**/__test__/*"]
}
